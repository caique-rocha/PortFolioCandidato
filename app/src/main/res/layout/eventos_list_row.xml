<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    tools:ignore="DisableBaselineAlignment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgCandidato"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff000"
        tools:ignore="ContentDescription,ObsoleteLayoutParam" />
    <View
        android:layout_width="5sp"
        android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.74"
            tools:ignore="NestedWeights">
            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                tools:ignore="SmallSp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/arrow_down_float"
                android:layout_above="@+id/evento"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                tools:ignore="ContentDescription,ObsoleteLayoutParam" />

            <TextView
                android:id="@+id/evento"
                android:text="Nevento"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF2A3222"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"
                android:paddingBottom="2dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="HorÃ¡rio:"
                    android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view"
                android:layout_toRightOf="@+id/imgCandidato"
                android:layout_toEndOf="@+id/imgCandidato"
                android:id="@+id/textView28"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,SmallSp" />
                <TextView
                    android:id="@+id/horario"
                android:text="@string/horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view"
                android:layout_toRightOf="@+id/textView28"
                android:layout_toEndOf="@+id/textView28"
                tools:ignore="ObsoleteLayoutParam" />
                </LinearLayout>

            <LinearLayout
            android:id="@+id/caixa1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgCandidato"
            android:layout_toEndOf="@+id/imgCandidato"
            tools:ignore="ObsoleteLayoutParam">

            <TextView
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/endere_o"
                android:id="@+id/checkBox"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/trajeto"
                android:text="trajeto"
                android:textSize="13dp"
                android:textStyle="italic"
                android:textColor="#FF2A3222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage"
            android:layout_toLeftOf="@+id/horario"
            android:layout_toStartOf="@+id/horario" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#166fff"
            android:id="@+id/view" />

</LinearLayout>


</LinearLayout>