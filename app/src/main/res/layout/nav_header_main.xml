<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/customizado_nav_header_height"
    android:background="@drawable/educacao3"
    android:paddingBottom="@dimen/customizado_activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/customizado_activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark" android:orientation="vertical"
    android:gravity="bottom"
    android:weightSum="1">

    <ImageView android:layout_width="match_parent" android:layout_height="100dp"
        android:paddingTop="@dimen/customizado_nav_header_vertical_spacing"
        android:src="@drawable/arte_launcher_nv" android:id="@+id/imageView"
        android:layout_weight="0.70" />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#001aff"
        android:text="CANDIDATO MESSENGER"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#001aff"
        android:text="melhorando nossa cidade !" android:id="@+id/textView" />

</LinearLayout>